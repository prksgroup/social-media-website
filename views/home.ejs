<h1>WELCOME TO SOCIAL</h1>

<h3>POSTS</h3>
<%if(locals.user){%>
    <form action="/post/create" id="post-form" method="POST">
        <textarea name="content" cols="50" rows="10" placeholder="Type here....."></textarea>
        <button type="submit">Post</button>
    </form>

    <%}%>
        <div>
            <%for(let i of post){%>
                <ul>
                    <li>
                        <p>
                            <%if(locals.user && locals.user.id==i.user.id){ %>
                                <small>
                                    <a href="/post/destroy/<%=i.user.id%>">X</a>
                                </small>
                                <%}%>
                                    <%=i.content%>
                                        <br>
                                        <small>
                            <%=i.user.name%>
                        </small>
                        </p>
                        <div>
                            <%if (locals.user){%>
                                <form action="/comments/create" method="POST">
                                    <input type="text" name="content" placeholder="Add comment">
                                    <input type="hidden" name="post" value="<%=i._id%>">
                                    <input type="submit" value="Comment">
                                </form>

                                <%}%>
                        </div>
                        <div>
                            <ul>
                                <%for(i of i.comments){%>
                                    <p>
                                        <%=i.content%>
                                    </p>
                                    <%}%>
                            </ul>
                        </div>
                    </li>

                </ul>

                <%}%>
        </div>
